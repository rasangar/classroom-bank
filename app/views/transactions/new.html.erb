<%= form_for(@transaction) do |f| %>

  <div class="field">
    <%= f.label :type_of_transaction, 'Type of Transaction' %>
    <%= select_tag(:type_of_transaction, options_for_select([['Deposit', 1], ['Withdrawal', 2]])) %>
  </div>

  <div class="field">
    <%= f.label :amount, 'Amount' %>
    <%= f.number_field(:amount) %>
  </div>
  <div class="actions">
    <%= f.submit 'Submit'%>
  </div>
<% end %>
