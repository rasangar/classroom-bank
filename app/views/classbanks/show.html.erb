<div id="app"></div>

<h1> <%= @classbank.name %> </h1>

<div class="">
  <% if @students %>
    <%  @students.each do |student| %>
      <div>
        <div class="student-name">
          <%= "#{student.first_name} #{student.last_name}" %>
        </div>
        <div class="balance">
          <%= "Balance: #{student.bank_account.balance}" %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<div class="columns rows">
    <h3>Add New Bank Account</h3>
    <%= render "bank_accounts/bank_account_form" %>
</div>
